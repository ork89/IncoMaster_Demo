<UserControl x:Class="IncoMasterApp.Views.IncomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IncoMasterApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Income" 
                   FontSize="35" 
                   FontFamily="Helvetica"
                   Grid.ColumnSpan="2"
                   Foreground="#FF2CEAA3" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top"/>

        <ListView ItemsSource="{Binding IncomeList}" 
                  Grid.Row="1"
                  Grid.ColumnSpan="2"
                  Width="400"
                  Margin="30 0 0 0"
                  HorizontalAlignment="Left">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Title}"
                                    Header="Type" />
                    <GridViewColumn DisplayMemberBinding="{Binding Amount}"
                                    Header="Name" />
                    <GridViewColumn DisplayMemberBinding="{Binding SubmitDate}"
                                    Header="Date" />
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 30" Grid.Row="1">
            <Button x:Name="IncomeAddBtn"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        Height="30"
                        Width="90"
                        Margin="0 0 10 0"
                        Padding="0 0 0 5"
                        Command="{Binding AddIncomeCommand}">
                <TextBlock Text="Add" />
            </Button>
            <Button x:Name="IncomeEditBtn"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        Height="30"
                        Width="90"
                        Margin="0 0 10 0"
                        Padding="0 0 0 5"
                        Command="{Binding EditIncomeCommand}">
                <TextBlock Text="Edit" />
            </Button>
            <Button x:Name="IncomeDeleteBtn"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        Height="30"
                        Width="80"
                        Margin="0 0 0 0"
                        Padding="0 0 0 5"
                        Command="{Binding DeleteIncomeCommand}">
                <TextBlock Text="Delete" />
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
