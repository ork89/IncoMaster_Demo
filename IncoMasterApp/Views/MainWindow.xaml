<Window x:Class="IncoMasterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:IncoMasterApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1000">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- // Top Panel // -->
        <Grid x:Name="TopMenu" Grid.Row="0" Grid.Column="10" Grid.ColumnSpan="2">
            <Button x:Name="UserBtn" Grid.Column="11" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20 0" Background="{x:Null}" BorderBrush="{x:Null}" Width="30" Height="30" Padding="0">
                <materialDesign:PackIcon Kind="UserOutline" Foreground="#FF28965A" Width="20" Height="20" />
            </Button>
            <Button x:Name="SettingsBtn" Grid.Column="11" HorizontalAlignment="Center" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}" Width="30" Height="30" Padding="0">
                <materialDesign:PackIcon Kind="Settings" Foreground="#FF28965A" Width="20" Height="20" />
            </Button>
        </Grid>
        <TextBlock Text="IncoMaster" Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="3" FontSize="50" Foreground="#FF2CEAA3" />
        <!-- // Side Menu // -->
        <Grid x:Name="Menu" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="10" Background="#242331">
            <StackPanel VerticalAlignment="Center">
                <ListView Foreground="#6BFFB8" FontFamily="Champagne &amp; Limousines" FontSize="20">
                    <ListViewItem Height="45" Padding="0">
                        <StackPanel Orientation="Horizontal" Margin="10 0">
                            <materialDesign:PackIcon Kind="Home" Foreground="White" Width="20" Height="20" Margin="5" VerticalAlignment="Center" />
                            <TextBlock Text="Home" Margin="10" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="45" Padding="0">
                        <StackPanel Orientation="Horizontal" Margin="10 0">
                            <materialDesign:PackIcon Kind="Dollar" Foreground="White" Width="20" Height="20" Margin="5" VerticalAlignment="Center" />
                            <TextBlock Text="Income" Margin="10" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="45" Padding="0">
                        <StackPanel Orientation="Horizontal" Margin="10 0">
                            <materialDesign:PackIcon Kind="Home" Foreground="White" Width="20" Height="20" Margin="5" VerticalAlignment="Center" />
                            <TextBlock Text="Expenses" Margin="10" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="45" Padding="0">
                        <StackPanel Orientation="Horizontal" Margin="10 0">
                            <materialDesign:PackIcon Kind="PiggyBank" Foreground="White" Width="20" Height="20" Margin="5" VerticalAlignment="Center" />
                            <TextBlock Text="Savings" Margin="10" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="45" Padding="0">
                        <StackPanel Orientation="Horizontal" Margin="10 0">
                            <materialDesign:PackIcon Kind="ArchiveArrowDown" Foreground="White" Width="20" Height="20" Margin="5" VerticalAlignment="Center" />
                            <TextBlock Text="Loans" Margin="10" />
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </StackPanel>
        </Grid>
        <Grid x:Name="AppBody" Grid.Row="1" Grid.Column="2" Grid.RowSpan="9" Grid.ColumnSpan="10" Background="Transparent">
            <Frame Source="IncomeView.xaml" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        </Grid>
    </Grid>
</Window>
